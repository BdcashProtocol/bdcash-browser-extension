{
  "name": "BDCash Extension Browser",
  "description": "Connect to BDCash Ecosystem directly from your browser.",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "BDCashID",
    "default_popup": "bdcash/id.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "*://*.bdcashchain.org/*",
    "*://*.manent.app/*",
    "*://*.bdcash.id/*",
    "*://*.planum.dev/*",
    "*://*.bdcash.me/*",
    "*://*.electio.app/*",
    "*://*.documenta.app/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.bdcashchain.org/*",
        "*://*.manent.app/*",
        "*://*.bdcash.id/*",
        "*://*.bdcash.me/*",
        "*://*.planum.dev/*",
        "*://*.electio.app/*",
        "*://*.documenta.app/*"
      ],
      "js": [
        "storage.js"
      ]
    }
  ]
}